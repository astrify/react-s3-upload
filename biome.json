{
	"$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
	"files": {
		"includes": [
			"**",
			"!**/stories",
			"!**/dist",
			"!**/storybook-static",
			"!**/.storybook",
			"!**/coverage",
			"!**/.next",
			"!**/node_modules",
			"!**/ui",
			"!**/tests",
			"!**/docs"
		]
	},
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"css": {
		"formatter": {
			"enabled": true
		},
		"linter": {
			"enabled": false
		}
	},

	"linter": {
		"enabled": true,
		"rules": {
			"nursery": {
				"useSortedClasses": {
					"fix": "safe",
					"level": "error",
					"options": {
						"attributes": ["classList"],
						"functions": ["clsx", "cm", "cva", "tw"]
					}
				}
			},
			"recommended": true,
			"style": {
				"noDefaultExport": "off",
				"useFilenamingConvention": "off",
				"useNamingConvention": {
					"level": "error",
					"options": {
						"strictCase": false
					}
				}
			},
			"performance": {
				"noReExportAll": "off",
				"noBarrelFile": "off"
			},
			"suspicious": {
				"noReactSpecificProps": "off",
				"noConsole": {
					"fix": "none",
					"level": "warn"
				}
			},
			"correctness": {
				"useImportExtensions": "off",
				"noUndeclaredDependencies": "off",
				"noUnusedVariables": "off",
				"noNodejsModules": "off"
			},
			"complexity": {
				"noForEach": "off"
			}
		}
	},
	"formatter": {
		"enabled": true
	}
}
